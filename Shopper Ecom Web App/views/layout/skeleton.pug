doctype html
html(lang = "en")
    head
        meta(charset = "UTF-8")
        meta(http-equiv = "X-UA-Compatible", content = "IE = edge")
        meta(name = "viewport", content = "width = device-width, initial-scale = 1.0")
        block title
        link(rel = "stylesheet", type = "text/css", href = "/css/core.css")
        block styles
    body 
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        a(href = "/", class = (path === '/' ? 'active' : '')) Shoppe
                    if auth
                        li.main-header__item
                            a(href = "/cart", class = (path === '/cart' ? 'active' : '')) Cart
                        li.main-header__item
                            a(href = "/orders", class = (path === '/orders' ? 'active' : '')) Orders
                        li.main-header__item
                            a(href = "/admin/add-product", class = (path === '/admin/add-product' ? 'active' : '')) Add Item
                        li.main-header__item
                            a(href = "/admin/all-products", class = (path === '/admin/all-products' ? 'active' : '')) My Items
                ul.main-header__item-list
                    if !auth    
                        li.main-header__item
                            a(href = "/auth/login", class = (path === '/auth/login' ? 'active' : '')) Login
                        li.main-header__item
                            a(href = "/auth/signup", class = (path === '/auth/signup' ? 'active' : '')) Signup
                    if auth
                        form(action = "/auth/logout", method = "POST")
                            input(type = "hidden", name = "_csrf", value = csrfToken)
                            button(type = "submit") Logout
        block content